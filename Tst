<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Perfil de Usuario</title>
  <style>
    body {
      background-color: #121212;
      color: white;
      font-family: Arial, sans-serif;
      text-align: center;
    }

    #avatar {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      margin-top: 20px;
      border: 3px solid crimson;
      object-fit: cover;
    }

    #descriptionInput {
      width: 60%;
      padding: 10px;
      margin-top: 10px;
      border-radius: 10px;
      border: none;
      font-size: 16px;
    }

    #profileForm button, #logoutBtn {
      background-color: crimson;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      margin-top: 15px;
      transition: background-color 0.3s ease;
    }

    #profileForm button:hover, #logoutBtn:hover {
      background-color: #e60000;
    }

    #popup-modal {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgba(30, 30, 30, 0.95);
      color: white;
      padding: 20px 30px;
      border-radius: 12px;
      box-shadow: 0 0 20px black;
      z-index: 9999;
      animation: fadeIn 0.4s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translate(-50%, -60%);
      }
      to {
        opacity: 1;
        transform: translate(-50%, -50%);
      }
    }

    #loading {
      display: none;
      color: crimson;
      font-weight: bold;
      margin-top: 10px;
      animation: pulse 1s infinite;
    }

    @keyframes pulse {
      0% { opacity: 0.2; }
      50% { opacity: 1; }
      100% { opacity: 0.2; }
    }
  </style>
</head>
<body>

  <h1>Bienvenido, <span id="username"></span></h1>
  <img id="avatar" src="" alt="Avatar de perfil"><br>

  <form id="profileForm">
    <input type="file" id="avatarInput" name="avatar"><br>
    <textarea id="descriptionInput" name="descripcion" placeholder="Escribe tu descripción..."></textarea><br>
    <button type="submit">Guardar perfil</button>
  </form>

  <p id="loading">Subiendo imagen...</p>
  <p id="descriptionText"></p>

  <button id="logoutBtn">Cerrar sesión</button>

  <div id="popup-modal"></div>

  <script>
    const username = localStorage.getItem('username');
    if (!username) {
      window.location.href = 'index.html';
    }

    document.getElementById('username').textContent = username;

    const avatar = document.getElementById('avatar');
    const descriptionText = document.getElementById('descriptionText');
    const descriptionInput = document.getElementById('descriptionInput');
    const popupModal = document.getElementById('popup-modal');
    const loading = document.getElementById('loading');

    // Obtener perfil
    fetch(`http://localhost:3000/api/profile/${username}`)
      .then(res => res.json())
      .then(data => {
        if (data.avatar) avatar.src = data.avatar;
        if (data.description) {
          descriptionText.textContent = `Descripción: ${data.description}`;
          descriptionInput.value = data.description;
        }
      });

    // Guardar perfil
    document.getElementById('profileForm').addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData();
      const file = document.getElementById('avatarInput').files[0];
      const desc = descriptionInput.value;

      if (file) formData.append('avatar', file);
      if (desc) formData.append('descripcion', desc);

      loading.style.display = 'block';

      fetch(`http://localhost:3000/api/profile/${username}`, {
        method: 'POST',
        body: formData
      })
      .then(res => res.json())
      .then(data => {
        setTimeout(() => {
          loading.style.display = 'none';
          showPopup(data.message || 'Perfil actualizado');
          location.reload();
        }, 2000); // Animación de carga 2 segundos
      })
      .catch(() => {
        loading.style.display = 'none';
        showPopup('Error al guardar perfil');
      });
    });

    // Cerrar sesión
    document.getElementById('logoutBtn').addEventListener('click', () => {
      localStorage.removeItem('username');
      window.location.href = 'index.html';
    });

    // Popup animado
    function showPopup(message) {
      popupModal.textContent = message;
      popupModal.style.display = 'block';

      setTimeout(() => {
        popupModal.style.display = 'none';
      }, 3000);
    }
  </script>
</body>
</html>
