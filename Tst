<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Perfil</title>
  <style>
    body {
      background: #121212;
      color: white;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px;
    }

    h1 {
      color: #e63946;
    }

    #avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #e63946;
      margin-bottom: 20px;
    }

    #description {
      margin-top: 10px;
      padding: 10px;
      border-radius: 10px;
      width: 90%;
      max-width: 400px;
      height: 100px;
      border: 1px solid #ccc;
      background: #1e1e1e;
      color: white;
    }

    #save-profile {
      padding: 10px 20px;
      background: #e63946;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      margin-top: 15px;
    }

    #image-upload {
      margin-top: 15px;
    }

    #uploading-msg {
      display: none;
      color: #ccc;
      margin-top: 10px;
    }

    #popup-modal {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #222;
      color: white;
      padding: 20px 30px;
      border-radius: 12px;
      z-index: 999;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
      text-align: center;
    }
  </style>
</head>
<body>

  <h1>Tu Perfil</h1>

  <img id="avatar" src="default-avatar.png" alt="Avatar" />

  <input type="file" id="image-upload" accept="image/*" />
  <div id="uploading-msg">Subiendo imagen...</div>

  <textarea id="description" placeholder="Escribe algo sobre ti..."></textarea>
  <button id="save-profile">Guardar perfil</button>

  <div id="popup-modal">
    <p id="popup-text"></p>
  </div>

  <script>
    const backendURL = 'http://localhost:3000';
    const username = localStorage.getItem('username');

    if (!username) {
      window.location.href = 'index.html';
    }

    // Cargar perfil existente
    fetch(`${backendURL}/api/profile/${username}`)
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          if (data.profile.avatar) {
            document.getElementById('avatar').src = `${backendURL}/uploads/${data.profile.avatar}`;
          }
          document.getElementById('description').value = data.profile.description || '';
        }
      });

    // Subir imagen con animación 2s
    document.getElementById('image-upload').addEventListener('change', function () {
      const file = this.files[0];
      if (!file) return;

      const uploadingMsg = document.getElementById('uploading-msg');
      uploadingMsg.style.display = 'block';

      const formData = new FormData();
      formData.append('image', file);
      formData.append('username', username);

      setTimeout(() => {
        fetch(`${backendURL}/api/profile/image`, {
          method: 'POST',
          body: formData
        })
        .then(res => res.json())
        .then(data => {
          uploadingMsg.style.display = 'none';
          if (data.success) {
            showPopup("Imagen subida correctamente");
            document.getElementById('avatar').src = `${backendURL}/uploads/${data.filename}?t=${Date.now()}`;
          } else {
            showPopup("Error al subir imagen");
          }
        })
        .catch(() => {
          uploadingMsg.style.display = 'none';
          showPopup("Error al conectar");
        });
      }, 2000);
    });

    // Guardar descripción
    document.getElementById('save-profile').addEventListener('click', () => {
      const description = document.getElementById('description').value;
      fetch(`${backendURL}/api/profile/${username}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ description })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          showPopup("Perfil guardado con éxito");
        } else {
          showPopup("No se pudo guardar");
        }
      });
    });

    // Mostrar popup
    function showPopup(message) {
      const popup = document.getElementById('popup-modal');
      const popupText = document.getElementById('popup-text');

      popupText.textContent = message;
      popup.style.display = 'block';

      setTimeout(() => {
        popup.style.display = 'none';
      }, 2500);
    }
  </script>
</body>
</html>
