<body>
  <header>
    <h1>Bienvenido, <span id="username-display"></span></h1>
  </header>

  <nav>
    <a href="#">Inicio</a>
    <a href="#">Configuración</a>
    <a href="#">Cerrar sesión</a>
  </nav>

  <main>
    <div id="avatar">👤</div>
    <h2 id="profile-name">Nombre del usuario</h2>
    <p id="profile-desc" class="welcome-msg">Bienvenido a tu perfil</p>
    <br/>
    <button id="edit-profile-btn">Editar perfil</button>
  </main>

  <!-- Popup -->
  <div id="popup-overlay" class="hidden">
    <div class="popup-content">
      <form id="profile-form">
        <label for="desc-input">Descripción:</label>
        <textarea id="desc-input" name="description" rows="3" placeholder="Escribe algo sobre ti..."></textarea>
        <label for="avatar-upload">Cambiar avatar:</label>
        <input type="file" id="avatar-upload" name="avatar" accept="image/*" />
        <div>
          <button type="submit" id="save-btn">Guardar</button>
          <button type="button" id="cancel-btn">Cancelar</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function showPopup() {
      document.getElementById('popup-overlay').classList.remove('hidden');
    }

    function hidePopup() {
      document.getElementById('popup-overlay').classList.add('hidden');
    }

    async function fetchLoggedUser() {
      const res = await fetch('http://localhost:3000/api/auth/user');
      if (!res.ok) throw new Error('No logueado');
      const data = await res.json();
      if (!data.success) throw new Error('Sesión inválida');
      return data.username;
    }

    async function loadProfile(username) {
      const res = await fetch(`http://localhost:3000/api/profile/${username}`);
      if (!res.ok) throw new Error('No se pudo cargar perfil');
      const data = await res.json();
      return data;
    }

    async function main() {
      try {
        const loggedUser = await fetchLoggedUser();
        document.getElementById('username-display').textContent = loggedUser;
        document.getElementById('profile-name').textContent = loggedUser;

        const profile = await loadProfile(loggedUser);
        const descDiv = document.getElementById('profile-desc');
        const avatarDiv = document.getElementById('avatar');

        descDiv.textContent = profile.description || 'Bienvenido a tu perfil';
        if (profile.avatar) {
          avatarDiv.innerHTML = `<img src="${profile.avatar}" alt="Avatar" />`;
        } else {
          avatarDiv.textContent = '👤';
        }

        document.getElementById('edit-profile-btn').addEventListener('click', () => {
          document.getElementById('desc-input').value = descDiv.textContent;
          showPopup();
        });

        document.getElementById('cancel-btn').addEventListener('click', hidePopup);
        document.getElementById('popup-overlay').addEventListener('click', (e) => {
          if (e.target === document.getElementById('popup-overlay')) hidePopup();
        });

        document.getElementById('profile-form').addEventListener('submit', async (e) => {
          e.preventDefault();
          const desc = document.getElementById('desc-input').value;
          const file = document.getElementById('avatar-upload').files[0];
          const formData = new FormData();
          formData.append('description', desc);
          if (file) formData.append('avatar', file);

          try {
            const res = await fetch(`http://localhost:3000/api/profile/${loggedUser}`, {
              method: 'POST',
              body: formData
            });
            const data = await res.json();
            if (!data.success) throw new Error(data.message);

            if (file) {
              const reader = new FileReader();
              reader.onload = function (e) {
                avatarDiv.innerHTML = 'Cargando...';
                setTimeout(() => {
                  avatarDiv.innerHTML = `<img src="${e.target.result}" alt="Avatar" />`;
                }, 2000);
              };
              reader.readAsDataURL(file);
            }

            descDiv.textContent = desc || 'Bienvenido a tu perfil';
            hidePopup();
          } catch (err) {
            alert('Error: ' + err.message);
          }
        });

        // Cerrar sesión
        document.querySelectorAll('nav a')[2].addEventListener('click', async (e) => {
          e.preventDefault();
          await fetch('http://localhost:3000/api/auth/logout', { method: 'POST' });
          window.location.href = 'index.html';
        });

      } catch (err) {
        alert('Debes iniciar sesión');
        window.location.href = 'index.html';
      }
    }

    main();
  </script>
</body>
</html>
